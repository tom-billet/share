{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des fichiers{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> Liste des fichiers</h1>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="fw-bold text-primary">
                                <th scope="col">Nom serveur</th>
                                <th scope="col">Date d'envoi</th>
                                <th scope="col">Extension</th>
                                <th scope="col">Taille</th>
                                <th scope="col">Utilisateur</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for file in files %}
                                <tr class="{{ cycle(['table-primary','table-secondary'], loop.index0) }}">
                                    <td>{{ file.serverName }}</td>
                                    <td>{{ file.sendingDate | date("d-m-Y Ã  H:i:s") }}</td>
                                    <td>{{ file.extension }}</td>
                                    <td>{{ file.size }}</td>
                                    <td>{{ file.user.surname | upper }} {{ file.user.name | capitalize }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}